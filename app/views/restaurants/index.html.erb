<div class="ml-5 mt-5">
  <% @restaurants.each do |r| %>
  <div class="border-bottom mt-5">
    <h1><%= r.name %></h1>
    <h3><%= r.category %></h3>
    <p><%= r.address %></p>
    <p><%= r.phone_number %></p>
    <h3>REVIEWS:</h3>
    <% i = 0 %>
    <% r.reviews.each do |review| %>
    <p><%= i += 1 %>. <%= review.content %> </p>
    <% end %>
    <div class="d-flex">
      <h3 class="mr-3"><%= link_to 'Show', restaurant_path(r), class: "btn btn-secondary" %></h3>
      <h3 class="mr-3"><%= link_to 'Edit', edit_restaurant_path(r), class: "btn btn-secondary" %></h3>
      <h3 class="mr-3"><%= link_to 'Delete', restaurant_path(r), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></h3>
      <h3><%= link_to 'Add Review', new_restaurant_review_path(r), class: "btn btn-secondary" %></h3>
    </div>
  </div>
  <% end %>

  <h2 class="mt-3"><%= link_to 'Create', new_restaurant_path, class: "btn btn-primary" %></h2>
</div>
